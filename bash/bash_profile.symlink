# Add symlink files to path
for file in ~/.*.path; do
    [ -f "$file" ] || break
    source $file
done
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

BLUE='\033[0;34m'
SET='\033[0m'

prompt() {
    PS1="\n$(powerline-rs --newline --modules time,git,gitstage --shell bash $?)\n${BLUE}\w${SET}\n$ "
}
PROMPT_COMMAND=prompt
